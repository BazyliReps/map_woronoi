@using Unity.Interception.Utilities
@model Astruk.ViewModels.MapVm

<svg width="100%" viewBox="@(Model.Vertices.Min(x=>x.X)-5) @(Model.Vertices.Min(x=>x.Y)-5) @Model.Vertices.Max(x=>x.X) @Model.Vertices.Max(x=>x.Y)"
     style="padding: 1rem">
    <polyline points="@Model.Vertices.Append(Model.Vertices.First()).Select(x=>$"{x.X},{x.Y}").JoinStrings(" ")"
              style="fill: none; stroke: black; stroke-width: 0.5" />
</svg>